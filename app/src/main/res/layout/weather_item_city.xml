<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/weather_item_city_padding_start"
    android:paddingStart="@dimen/weather_item_city_padding_start"
    android:layout_marginTop="@dimen/weather_item_city_margin_vertical"
    android:layout_marginBottom="@dimen/weather_item_city_margin_vertical"
    android:paddingTop="@dimen/weather_item_city_padding_vertical"
    android:paddingEnd="@dimen/weather_item_city_padding_end"
    android:paddingRight="@dimen/weather_item_city_padding_end"
    android:paddingBottom="@dimen/weather_item_city_padding_vertical">

    <ImageView
        android:id="@+id/ivCountry"
        android:layout_width="@dimen/weather_item_city_image_diameter"
        android:layout_height="@dimen/weather_item_city_image_diameter"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        tools:src="@drawable/weather_ic_argentina" />

    <TextView
        android:id="@+id/tvCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/weather_item_city_margin_vertical"
        android:layout_toEndOf="@id/ivCountry"
        android:layout_marginLeft="@dimen/weather_item_city_margin_vertical"
        android:layout_toRightOf="@id/ivCountry"
        android:layout_centerVertical="true"
        android:textColor="@color/weather_black"
        android:textSize="@dimen/weather_text_size_x_small"
        tools:text="Buenos Aires" />

</RelativeLayout>